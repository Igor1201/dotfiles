#!/usr/bin/env bash

# Go shit
export GOPATH=$HOME/gopath
export PATH="/usr/local/bin:$GOPATH/bin:$PATH"

# Android shit
export ANDROID_HOME="$HOME/Library/Android/sdk"
export ANDROID_SDK="$HOME/Library/Android/sdk"
export ANDROID_SDK_ROOT=$ANDROID_HOME
export ANDROID_NDK="$HOME/Library/Android/ndk"
export ANDROID_NDK_ROOT=$ANDROID_NDK
export ANDROID_NDK_HOME=$ANDROID_NDK
export PATH="$PATH:$ANDROID_HOME"
export PATH="$PATH:$ANDROID_HOME/tools/bin"
export PATH="$PATH:$ANDROID_HOME/emulator"
export PATH="$PATH:$ANDROID_HOME/platform-tools"
export PATH="$PATH:$ANDROID_HOME/build-tools/25.0.1"

# Java shit
export JAVA_HOME="/Library/Java/JavaVirtualMachines/jdk1.8.0_151.jdk/Contents/Home"
export PATH="$PATH:$JAVA_HOME/bin"
export PATH="$PATH:$HOME/.pub-cache/bin"

# Node shit
which nodenv > /dev/null 2>&1 && eval "$(nodenv init - | grep -v 'nodenv rehash')"

# Rust shit
export PATH="$PATH:$HOME/.cargo/bin"

# Flutter shit
export FLUTTER_HOME="/Users/igor/Projects/flutter"
export PATH="$PATH:$FLUTTER_HOME/bin"

# Nintendo Switch shit
export DEVKITPRO="/opt/devkitpro"
export DEVKITARM=$DEVKITPRO/devkitARM
export LIBTRANSISTOR_HOME="/opt/libtransistor"
export PATH="/usr/local/Cellar/llvm/6.0.1/bin:$PATH"
